{
  "name": "trillo",
  "version": "1.0.0",
  "description": "Udemy Advanced CSS and Sass course.  Trillo project.",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass --watch sass/main.scss css/style.css",
    "compile:sass": "sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "sass css/style.prefix.css css/style.css --style=compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eslutz/Udemy-Advanced-CSS-and-Sass--Trillo-Project.git"
  },
  "author": "Eric Slutz",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eslutz/Udemy-Advanced-CSS-and-Sass--Trillo-Project/issues"
  },
  "homepage": "https://github.com/eslutz/Udemy-Advanced-CSS-and-Sass--Trillo-Project#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "sass": "^1.58.3"
  }
}
